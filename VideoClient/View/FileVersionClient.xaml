<Window x:Class="VideoClient.View.FileVersionClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoClient.View"
        xmlns:wpfToolkit="http://schemas.xceed.com/wpf/xaml/toolkit" 
        mc:Ignorable="d"
        xmlns:viewmodel="clr-namespace:VideoClient.Viewmodel"
        d:DataContext="{d:DesignInstance Type=viewmodel:FileVersionViewModel}"
        Title="File Version" Height="500" Width="500">
    <Grid>
        <wpfToolkit:BusyIndicator x:Name="busyIndicator" IsBusy="{Binding ShowBusyIndicator}" BusyContent="Please Wait...">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="1" Margin="5" HorizontalAlignment="Right">
                    <Button Visibility="Collapsed" Content="Download" Width="100" IsEnabled="{Binding SelectedFileVersion, TargetNullValue=False}"/>
                </StackPanel>
                <DataGrid x:Name="dataGrid" 
                      Grid.Row="0"
                      AlternatingRowBackground = "LightBlue"  
                      AlternationCount = "2" 
                      AutoGenerateColumns = "False"
                      ItemsSource="{Binding FileVersions}" 
                      SelectionMode="Single" 
                      SelectionUnit="FullRow"
                      SelectedItem="{Binding SelectedFileVersion}"
                      IsReadOnly="True">        
                    <DataGrid.Columns>
                        <DataGridTextColumn Header = "Name" Binding = "{Binding Name}" />
                        <DataGridTextColumn Header = "Size" Binding = "{Binding Size}" />
                        <DataGridTextColumn Header = "Last Modified" Binding = "{Binding ServerModified}" />
                        <DataGridTextColumn Header = "Revision" Binding = "{Binding Rev}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>     
        </wpfToolkit:BusyIndicator>
    </Grid>
</Window>
