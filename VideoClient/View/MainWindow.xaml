<Window x:Class="VideoClient.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoClient.UI"
        xmlns:wpfToolkit="http://schemas.xceed.com/wpf/xaml/toolkit" xmlns:viewmodel="clr-namespace:VideoClient.Viewmodel"
        xmlns:converters="clr-namespace:VideoClient.Converter"
        d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        mc:Ignorable="d"  
        Title="MainWindow" Height="Auto" Width="1024" MinHeight="300" MinWidth="600">
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="boolVisConverter"></converters:BooleanToVisibilityConverter>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolVisConverter"></converters:InverseBooleanToVisibilityConverter>
    </Window.Resources>
    <Grid>
        <wpfToolkit:BusyIndicator x:Name="busyIndicator" IsBusy="{Binding ShowBusyIndicator}" BusyContent="Loading...">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <GroupBox x:Name="gbAuthentication" HorizontalAlignment="Stretch" Margin="2" VerticalAlignment="Stretch" Grid.Row="0" Background="White">
                    <GroupBox.Header>
                        <Label Content="Authentication" FontWeight="SemiBold"></Label>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="100*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Margin="5" Grid.Column="0" VerticalAlignment="Center" Text="Click on login to proceed" Visibility="{Binding IsAuthenticated, Converter={StaticResource InverseBoolVisConverter},Mode=TwoWay,NotifyOnSourceUpdated=True,UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Margin="5" Content="Login" x:Name="btnApiKey" Grid.Column="1"  Command="{Binding AuthenticateCommand}" Width="100" HorizontalAlignment="Left"  Visibility="{Binding IsAuthenticated, Converter={StaticResource InverseBoolVisConverter},Mode=TwoWay,NotifyOnSourceUpdated=True,UpdateSourceTrigger=PropertyChanged}"></Button>

                        <TextBlock Margin="5" VerticalAlignment="Center" Text="{Binding WelcomeText}" Visibility="{Binding IsAuthenticated, Converter={StaticResource boolVisConverter},Mode=TwoWay,NotifyOnSourceUpdated=True,UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </GroupBox>
                
                <GroupBox x:Name="gbDropBox" HorizontalAlignment="Stretch" Margin="2" Grid.Row="1" VerticalAlignment="Stretch" Background="White" IsEnabled="{Binding IsAuthenticated}">
                    <GroupBox.Header>
                        <Label Content="DropBox Operations" FontWeight="SemiBold"></Label>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="btlUpload" Width="100" Content="Upload" HorizontalAlignment="Stretch" Margin="5" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="2" FontSize="14" Command="{Binding UploadCommand}"/>
                            <Button x:Name="btnDownload" Width="100" Content="Download" HorizontalAlignment="Stretch" Margin="5" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="3" FontSize="14" IsEnabled="{Binding SelectedItem, TargetNullValue=False}" Command="{Binding DownloadCommand}"/>
                            <Button x:Name="btnDelete" Width="100" IsEnabled="{Binding SelectedItem, TargetNullValue=False}" Content="Delete" HorizontalAlignment="Stretch" Margin="5" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="4" FontSize="14" Command="{Binding DeleteCommand}" />
                        </StackPanel>

                        <DataGrid x:Name="dataGrid" 
                                  Grid.Row="1"
                                  AlternatingRowBackground = "LightBlue"  
                                  AlternationCount = "2" 
                                  AutoGenerateColumns = "False"
                                  ItemsSource="{Binding CloudFilesCollection}" 
                                  SelectionMode="Single" 
                                  SelectionUnit="FullRow"
                                  SelectedItem="{Binding SelectedItem}"
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header = "Name" Binding = "{Binding Name}" />
                                <DataGridTextColumn Header = "Size" Binding = "{Binding Size}" />
                                <DataGridTextColumn Header = "Last Modified" Binding = "{Binding ServerModified}" />
                                <DataGridTextColumn Header = "Path" Binding = "{Binding PathDisplay}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>
            </Grid>
        </wpfToolkit:BusyIndicator>
    </Grid>
</Window>   
